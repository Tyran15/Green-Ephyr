{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
